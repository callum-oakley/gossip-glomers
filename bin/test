#! /usr/bin/env bash

set -euo pipefail

echo -e '\nChallenge #1: Echo'
./maelstrom/maelstrom test -w echo --bin bin/echo --node-count 1 --time-limit 10

echo -e '\nChallenge #2: Unique ID Generation'
./maelstrom/maelstrom test -w unique-ids --bin bin/uuid --time-limit 30 \
    --rate 1000 --node-count 3 --availability total --nemesis partition
